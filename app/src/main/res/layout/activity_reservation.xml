<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="예약 페이지"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/reservation_clinicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="건국대학교병원"
            android:textColor="@color/colorBlack"
            tools:textSize="22sp" />

        <CalendarView
            android:id="@+id/reservation_calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minDate="11/19/2020"
            android:maxDate="11/19/2021"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/tmpView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/reservation_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020년 11월 19일" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/time_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/button_reservation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/colorMain"
        android:fontFamily="@font/fontstyle"
        android:text="예약하기"
        android:textColor="@color/colorLightGray"
        android:textSize="20dp" />
</LinearLayout>